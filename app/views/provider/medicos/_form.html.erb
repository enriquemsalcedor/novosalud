<%= form_for(provider_medico,  validate: true ,:remote  => @provider_medico.verificar_empleado_externo?(current_user.id), html:{role: :form, 'data-model' => 'provider_medico'}) do |f| %>
<%= f.fields_for :people do |m| %>
<%= render 'people/formedico', :f => m %>
<% end %>  
<div class="col-lg-12 form-group">
  <div class="col-lg-12 input_100">
     <label class="label-form">Tel√©fono de contacto</label>
  <%= f.text_field :phone_medico, validate:{presence: true, numericality: true},class: "input", maxlength: '15'%>
 </div>
</div>

<div class="col-lg-12 form-group">
  <div class="col-lg-12 input_100">
  <label class="label-form">M.S.D.S</label>
    <%= f.text_field :code_medico , minlength: '3', maxlength: '20' %>
    <span class="help-block"></span>
  </div>
</div>
<div class="col-lg-12 form-group">
  <div class="col-lg-12 input_100">
  <label class="label-form">C.M.L</label>
    <%= f.text_field :c_m_l , minlength: '3', maxlength: '20'%>
    <span class="help-block"></span>
  </div>
</div>
<div class="col-lg-12 form-group">
  <div class="col-lg-12 input_100">
  <label class="label-form"><%= I18n.t('.medicos.attributes.speciality_id')%></label>
    <%= f.collection_select :speciality_id, Speciality.order(:name), :id, :name , validate: true, :prompt=>'Seleccione'%>
    <span class="help-block"></span>
  </div>
</div>
<div id= "divAceptarMedico" class="col-lg-12 form-group">
  <div class="col-lg-2 col-lg-offset-7 col-sm-2 col-sm-offset-7 col-md-2 col-md-offset-7">
    <%= link_to I18n.t('.general.action.cancel'), provider_medicos_path,class: "hvr-skew-backward" %>
  </div>
  <% if @permiso_modificar == true || @permiso_crear == true %> 
    <div class="col-lg-3 pull-right">
      <%= f.submit I18n.t('.medicos.actions.accept'),:id=> "btnAceptarMedico",class: "hvr-skew-backward" %>
    </div>
  <% end -%>
</div>
<% end %>  

   
