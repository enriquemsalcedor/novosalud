		<div class="col-lg-4 col-xs-5 text-right">
			<strong><%= raw I18n.t('.provider_types.attributes.name') %></strong>
		</div>
		<div class="col-lg-8 col-xs-7 rdown">
			<div class="col-lg-10 ">
				<%= @provider_provider_type.name %> 
