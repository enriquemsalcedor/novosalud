<%= form_for(position) do |f| %>
<div class="col-lg-12 form-group">
  <div class="col-lg-12 input_100">
  <label class="label-form"><%= I18n.t ('.general.attributes.name') %></label>
    <%= f.text_field :name, class: "input-text" , minlength: '3', maxlength: '50' %>
  </div>
</div>
<div class="col-lg-12 form-group">
  <div class="col-lg-12 input_100">
   <label class="label-form"><%= I18n.t ('.general.attributes.description') %></label>
    <%= f.text_field :description, class: "input-text" , minlength: '3', maxlength: '50' %>
  </div>
</div>
<div class="col-lg-12 form-group">
  <div class="col-lg-2 col-lg-offset-7 col-sm-2 col-sm-offset-7 col-md-2 col-md-offset-7">
    <%= link_to I18n.t('.general.action.cancel'), positions_path,class: "hvr-skew-backward" %>
  </div>
  <div class="col-lg-3 pull-right">
  <% if @permiso_modificar == true || @permiso_crear == true %>
    <%= f.submit I18n.t('.specialities.actions.accept'), data: {disable_with: "Guardando ..."},class: "hvr-skew-backward" %> 
  <% end %>
</div>
</div>
<% end %>
 
