  <%= form_for(security_profile, validate: true) do |f| %>
  <div class="col-lg-12 form-group">
    <div class="col-lg-12 input_100">
       <label class="label-form"><%= I18n.t('.profiles.attributes.name') %></label>
      <%= f.text_field :name , minlength: '3', maxlength: '50'%>
      <span class="help-block"></span>
    </div>
    <div class="col-lg-12 input_100">
      <%= f.label I18n.t('roles.attributes.select'), class:"label-form" %>
      <%= f.collection_select :security_role_id, Security::Role.order(:name), :id, :name,validate: true,include_blank:"#{I18n.t ('.roles.attributes.name_show')}" %>
      
      <span class="help-block"></span>
    </div>
  </div>
  <%= session[:something] %>
  <div class="col-lg-12 form-group" >
    <div class="col-lg-2 col-lg-offset-7 col-sm-2 col-sm-offset-7 col-md-2 col-md-offset-7">
      <%= link_to I18n.t('.general.action.cancel'), security_profiles_path,class: "hvr-skew-backward" %>
    </div>
    <div class="col-lg-3 pull-right">
        <% if @permiso_crear == true || @permiso_modificar == true  %>
          <%= f.submit I18n.t('profiles.actions.accept'), data: {disable_with: "Guardando ..."},class: "hvr-skew-backward" %>
        <% end -%>
    </div>
  </div>
  <% end %>

