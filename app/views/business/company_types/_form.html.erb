<%= form_for(business_company_type) do |f| %>
<% if business_company_type.errors.any? %>
<% end %>
<div class="col-lg-12 form-group">
  <div class="col-lg-12 input_100">
  <label class="label-form"><%= I18n.t ('.company_types.attributes.name') %></label>
    <%= f.text_field :name %>
    <span class="help-block"></span>
  </div>
</div> 
<div class="col-lg-12 form-group">
  <div class="col-lg-12 input_100">
  <label class="label-form"><%= I18n.t ('.company_types.attributes.limit') %></label>
    <%= f.text_field :limit%>
    <span class="help-block"></span>
  </div>
</div> 
<div class="col-lg-12 form-group">
  <div class="col-lg-2 col-lg-offset-7 col-sm-2 col-sm-offset-7 col-md-2 col-md-offset-7">
    <%= link_to I18n.t('.general.action.cancel'), business_company_types_path,class: "hvr-skew-backward" %>
  </div>
  <% if @permiso_consultar == true || @permiso_crear == true %>
    <div class="col-lg-3 pull-right">
      <%= f.submit I18n.t('.company_types.actions.accept'),class: "hvr-skew-backward",data: {disable_with: "Guardando ..."} %> 
    </div>
  <% end -%>
</div>
<% end %> 

