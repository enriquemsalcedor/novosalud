<section class="col-lg-8 col-lg-offset-2">
  <div class="col-lg-12">
    <h1 class="space-title">Editar Paquetes</h1>
  </div>
  <%= render 'form', colection_package: @colection_package %>
  <div id="colectionPackageProduct" style= "display:none;">
    <div id ="divEditPackageProduct">
    </div>
