<section  class="center-flex">
  <div class="col-lg-8">
    <%= form_for(contact) do |f| %>
    <div class="col-lg-12 form-group">
      <div class="col-lg-12 input_100 ">
        <label class="label-form"><%= I18n.t ('.contact.attributes.name') %></label>
        <%= f.text_field :name ,class: "input"%>
      </div>
    </div>
    <div class="col-lg-12 form-group">
      <div class="col-lg-12 input_100 ">
        <label class="label-form"><%= I18n.t ('.contact.attributes.email') %></label>
        <%= f.text_field :email,class: "input",  validate: true,  minlength: '10', maxlength: '60',  validate: { presence: true } %>
      </div>
    </div>
    <div class="col-lg-12 form-group">
      <div class="col-lg-12 input_100 ">
        <label class="label-form"><%= I18n.t ('.contact.attributes.subject') %></label>
        <%= f.text_field :subject,class: "input"  %>
      </div>
    </div>
    <div class="col-lg-12 form-group">
      <div class="col-lg-12 input_100">
        <label class="label-form"><%= I18n.t ('.contact.attributes.message') %></label>
        <%= f.text_area :message,class: "input_area" %>
      </div>
    </div>

    <div class="col-lg-12 form-group">
      <div class="col-lg-12 pull-right">
        <%= f.submit "Enviar", data: {disable_with: "Enviando ..."} ,class: "hvr-skew-backward"%>
      </div>
    </div>
    <% end %>
  </div>
</section>
