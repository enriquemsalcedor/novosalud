<% unless notice.nil?%>
<div class="alert alert-success notice">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <p id="notice"><%= notice %></p>
</div>
<% end %>
<div class="title-center">
	<h1 class="space-title"><%=raw I18n.t ('.product_types.actions.show_product_type') %></h1>
</div>
<div class="col-lg-10">
  <div class="col-lg-12">
    <div class="col-lg-4 col-xs-5 text-right">
      <strong><%= raw I18n.t ('.product_types.attributes.name')%></strong>
    </div>
    <div class="col-lg-8 col-xs-7 rdown">
      <%= @product_product_type.name %>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="col-lg-4  col-xs-5 text-right">
      <strong><%=raw I18n.t ('.product_types.attributes.description')%></strong>
    </div>
    <div class="col-lg-8 col-xs-7 rdown">
      <%= @product_product_type.description %>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="col-lg-4  col-xs-5 text-right">
      <strong><%=raw I18n.t ('.general.attributes.created_at')%></strong>
    </div>
    <div class="col-lg-8 col-xs-7 rdown">
      <%= @product_product_type.created_at.strftime("%d-%m-%Y") %>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="col-lg-4  col-xs-5 text-right">
      <strong><%=raw I18n.t ('.general.attributes.updated_at')%></strong>
    </div>
    <div class="col-lg-8 col-xs-7 rdown">
      <%= @product_product_type.updated_at.strftime("%d-%m-%Y") %>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="col-lg-4  col-xs-5 text-right">
      <strong><%=raw I18n.t ('.general.attributes.status')%></strong>
    </div>
    <div class="col-lg-8 col-xs-7 rdown">
      <%= @product_product_type.status %>
    </div>
  </div>
</div>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 center">
<% if @permiso_modificar == true %>
  <%= link_to I18n.t('.general.action.edit'), edit_product_product_type_path(@product_product_type), class: "hvr-skew-backward"  %>
<% end -%>
  <%= link_to I18n.t('.general.action.cancel'), product_product_types_path, class: "hvr-skew-backward"  %>
</div>
