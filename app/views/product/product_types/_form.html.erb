<%= form_for(product_product_type) do |f| %>
<div class="col-lg-12 form-group">
  <div class="col-lg-12 input_100">
  <label class="label-form"><%= I18n.t ('.product_types.attributes.name')%></label>
    <%= f.text_field :name , minlength: '3', maxlength: '50', class:"input" %>
  </div>
</div>
<div class="col-lg-12 form-group">
  <div class="col-lg-12 input_100">
   <label class="label-form"><%= I18n.t ('.product_types.attributes.description')%></label>
    <%= f.text_area :description , minlength: '0', maxlength: '140', class:"input" %>
  </div>
</div>
<div class="col-lg-12 form-group">
  <div class="col-lg-2 col-lg-offset-7 col-sm-2 col-sm-offset-7 col-md-2 col-md-offset-7">
    <%= link_to I18n.t('.general.action.cancel'), product_product_types_path ,class: "hvr-skew-backward" %>
  </div>
  <% if @permiso_modificar == true || @permiso_crear == true%> 
    <div class="col-lg-2 pull-right">
      <%= f.submit I18n.t('.product_types.actions.accept'),class: "hvr-skew-backward", data: {disable_with: "Guardando ..."} %>
    </div>
  <% end -%>
</div>
<% end %>


