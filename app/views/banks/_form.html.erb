<%= form_for(bank , validate: true) do |f| %>
<div class="col-lg-12 form-group">
  <div class="col-lg-12 input_100">
  <label class="label-form"><%= I18n.t('.banks.attributes.name') %></label>
    <%= f.text_field :name , minlength: '3', maxlength: '50' , validate: true%>
    <span class="help-block"></span>
  </div>
</div>
<div class="col-lg-12 form-group">
  <div class="col-lg-12 input_100">
    <label class="label-form"><%= I18n.t('.banks.attributes.direction_web') %></label>
    <%= f.text_field :direction_web ,  validate: true ,placeholder: 'https://www.pagina.com' %>
    <span class="help-block"></span>
  </div>
</div>
<div class="col-lg-12 form-group">
  <div class="col-lg-12 input_100 ">
    <label class="label-form"><%= I18n.t('.banks.attributes.image') %></label>
      <%= f.file_field :image, class: "file", id:"file-0d",'data-show-upload':"false" %>
      <span class="help-block"></span>
    </div>
</div>
<div class="col-lg-12 form-group">
  <div class="col-lg-2 col-lg-offset-7 col-sm-2 col-sm-offset-7 col-md-2 col-md-offset-7">
  <%= link_to I18n.t('.general.action.cancel'), banks_path,class: "hvr-skew-backward" %>
</div>
<% if @permiso_modificar == true || @permiso_crear == true %>
  <div class="col-lg-2 pull-right">
    <%= f.submit I18n.t('.banks.actions.accept'),class: "hvr-skew-backward", data: {disable_with: "Guardando ..."} %>
  </div>
<% end -%>
</div>
<% end %>


