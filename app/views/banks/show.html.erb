<% unless notice.nil? %>
  <div class="alert alert-success notice">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p id="notice"><%= notice %></p> 
  </div> 
<% end %>
<div class="title-center">
<h1 class="space-title"><%=raw I18n.t ('.banks.actions.show_bank') %></h1>
</div>
  <div class="col-lg-12 col-xs-12 img-center pro-img">
    <% if @bank.image_file_name.nil? %>
      <i class="fa fa-cube"></i>
    <%else%>
      <%= image_tag @bank.image.url(:logo) %>
    <%end%>
  </div>
<div class="col-lg-10">
	<div class="col-lg-12">
		<div class="col-lg-4  col-xs-5 text-right">
			<strong><%= raw I18n.t('.banks.attributes.name') %></strong>
		</div>
		<div class="col-lg-8 col-xs-7 rdown">
			<div class="col-lg-10 ">
				<%= @bank.name %>
			</div>
			
		</div>
	</div>
  <div class="col-lg-12">
    <div class="col-lg-4  col-xs-5 text-right">
      <strong><%= raw I18n.t('.banks.attributes.direction_web') %></strong>
    </div>
    <div class="col-lg-8 col-xs-7 rdown">
      <div class="col-lg-10 ">
        <%= @bank.direction_web %>
      </div>
      
    </div>
  </div>
  <div class="col-lg-12">
    <div class="col-lg-4  col-xs-5 text-right">
      <strong><%=raw I18n.t ('.general.attributes.created_at')%></strong>
    </div>
    <div class="col-lg-8 col-xs-7 rdown">
      <div class="col-lg-10 ">
        <%= @bank.created_at.strftime("%d-%m-%Y") %>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="col-lg-4  col-xs-5 text-right">
      <strong><%=raw I18n.t ('.general.attributes.updated_at')%></strong>
    </div>
    <div class="col-lg-8 col-xs-7 rdown">
      <div class="col-lg-10 ">
        <%= @bank.updated_at.strftime("%d-%m-%Y") %>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="col-lg-4  col-xs-5 text-right">
      <strong><%=raw I18n.t ('.general.attributes.status')%></strong>
    </div>
    <div class="col-lg-8 col-xs-7 rdown">
      <div class="col-lg-10">
        <%= @bank.status %>
      </div>
    </div>
  </div>
</div>
  	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 center">  
    <% if @permiso_modificar == true %>    
      <%= link_to I18n.t('.general.action.edit'), edit_bank_path(@bank),class: "hvr-skew-backward" %> 
    <% end -%>
    <%= link_to I18n.t('.general.action.cancel'), banks_path,class: "hvr-skew-backward" %>
  </div>
