<% unless alert.nil? %>
<div class="alert alert-danger notice">
  <button type="button" class="close" data-dismiss="alert">&times;</button>   
  <p id="notice margin_left_none"><%= alert %></p>
</div>
<%end%>
<% unless notice.nil? %>
<div class="alert alert-success notice">
  <button type="button" class="close" data-dismiss="alert">&times;</button>   
  <p id="notice margin_left_none"><%= notice %></p> 
</div>
<%end%> 

<div class="container login-container">
  <div class="col-lg-5 col-sm-6 col-md-6 col-xs-12 cont-sesion" >
    <h3>Iniciar sesión</h3>
    <div class="login">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="login-mail">

        <%= f.email_field :login, autofocus: true,class:"w-100", placeholder:"#{I18n.t ('.devise.new.email')}"%>
        <i class="top-icon">@</i>
      </div>
      <div class="login-mail">
        <%= f.password_field :password,class:"w-100", autocomplete: "off",placeholder:"Contraseña" %>
        <i class="glyphicon glyphicon-lock top-icon"></i>
      </div>

      <div class='cont-btn-super dis-fx'>

        <div class='col-lg-6 col-md-6 col-sm-7 col-xs-12 pr-0 pl-0'>
          <div class="col-xs-12 pl-0">
            <!-- < %= link_to "Registrarse", new_user_registration_path, class: "hvr-skew-backward" %>-->
            <%if $client == "persona" %>
            <%= link_to "Registrarse", new_customer_path %>
            <%else%>
            <%= link_to "Registrarse", new_business_company_path %>
            <%end%>
          </div> 
          <div class="col-xs-12 pl-0">
            <% if devise_mapping.rememberable? -%>
              <div class='cont-recuperacion'>

                  <a href="/users/password/new">¿Olvidó su contraseña?</a>

              </div> 
            <% end -%>
          </div>          
        </div>
        <div class='col-lg-6 col-md-6 col-sm-5 col-xs-12 pr-0 pl-0'>
          <div class="cont-btn actions hvr-skew-backward ml-0 pull-right">
            <%= f.submit I18n.t ('.devise.new.login'), data: {disable_with: "Guardando ..."} %>
          </div>
        </div>

        
      </div>
      
      <% end %>

<!--<div class="clearfix"></div>
