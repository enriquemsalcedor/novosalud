<% unless flash[:errors].nil? %>
<div class="alert alert-danger notice">
	<button type="button" class="close" data-dismiss="alert">&times;</button>   
	<p id="notice margin_left_none"><%= flash[:errors] %></p>
</div>
<%end%>
<div class="container login-container">
	<div class="col-lg-5 col-sm-6 col-md-6 col-xs-12" >
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		<%= devise_error_messages! %>
		<h3 class="fz-1_8"><%= raw I18n.t ('.devise.new.title.password') %></h3>
		<div class="login-mail mt-1">

			<label for="user_login"></label>
			<%= f.email_field :login, placeholder:"#{I18n.t ('.devise.new.email')}"  %>
			<i class="glyphicon glyphicon-envelope"></i> 

		</div>

		<div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 pr-0">
		<div class="actions pull-left form-group pl-03">
				<%if session[:layout] == 'admin'%>
				<%= link_to "Cancelar", admin_path,class: "hvr-skew-backward w-100 min-hg-45" %>
				<%else%>
				<%= link_to "Cancelar", new_user_session_path ,class: "hvr-skew-backward w-100 min-hg-45"%>
				<%end%>	
			</div>                 
			<div class=" pull-right">
				<%= f.submit "Aceptar", data: {disable_with: "Enviando ..."}, class:"hvr-skew-backward w-100 min-hg-45" %>
			</div>
		</div>
		<% end %>
	</div>
</div>