<%= form_for(account, validate: true) do |f| %>

 <div class="col-lg-12 form-group">
    <div class="col-lg-12 input_100">
      <label class="label-form"><%= I18n.t('.general.attribute.bank_id') %></label>
      <%= f.collection_select :bank_id, Bank.activo.order(:name), :id, :name, validate: true,include_blank:"#{I18n.t ('.general.attribute.bank')}"%>
      <span class="help-block"></span>
    </div>
  </div>
  <div class="col-lg-12 form-group">
    <div class="col-lg-12 input_100">
      <label class="label-form"><%= I18n.t('.general.attribute.account_number') %></label>
      <%= f.text_field :account_number , maxlength: 20 , validate: true %>
      <span class="help-block"></span>
    </div>
  </div>
  <div class="col-lg-12 form-group">
    <div class="col-lg-12 input_100">
      <label class="label-form"><%= I18n.t('.general.attribute.account_type') %></label>
      <%= f.select :account_type , Account::ACCOUNT_TYPES , validate: true, include_blank:"#{I18n.t ('.general.attribute.account_type')}"%>
      <span class="help-block"></span>
    </div>
  </div>
  <div class="col-lg-12 form-group">
    <div class="col-lg-12 input_100">
      <label class="label-form"><%= I18n.t('.general.attribute.email') %></label>
      <%= f.text_field :email, minlength: '10', maxlength: '60' , placeholder:"correo.electronico@prueba.com", validate: true %>
      <span class="help-block"></span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-2 col-lg-offset-7">
      <%= link_to I18n.t('.general.action.cancel'), accounts_path,class: "hvr-skew-backward" %>
    </div>
    <div class="col-lg-3 pull-right">
    <% if @permiso_modificar == true || @permiso_crear == true%>
      <%= f.submit I18n.t('.general.action.accept'), data: {disable_with: "Guardando ..."},class: "hvr-skew-backward"  %>
    <% end -%>
    </div>
  </div>

<% end %>

 