<% unless notice.nil? %>
<div class="alert alert-success notice">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <p id="notice"><%= notice %></p> 
</div>
<% end -%> 
<div class="col-lg-11 col-lg-offset-1 col-sm-10 col-sm-offset-3 col-md-8 col-md-offset-4">
<h1 class="space-title"><%=raw I18n.t ('.motives.actions.show_motive') %></h1>
</div>
<div class="col-lg-10">
	<div class="col-lg-12">
		<div class="col-lg-2 col-xs-5 text-right">
			<strong><%= raw I18n.t ('.motives.attributes.name')%></strong>
		</div>
		<div class="col-lg-10 col-xs-7 rdown">
			<div class="col-lg-10 ">
				<%= @motive.name %>
			</div>
			
		</div>
	</div>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 center">   
	<% if @permiso_modificar == true %>   
		<%= link_to I18n.t('.general.action.edit'), edit_motive_path(@motive),class: "hvr-skew-backward"  %>
	<% end -%>
	<%= link_to I18n.t('.general.action.cancel'), motives_path, class: "hvr-skew-backward"  %>
</div>
