<% unless notice.nil? %>
  <div class="alert alert-success notice">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p id="notice"><%= notice %></p>
  </div> 
<% end %>
<section class="col-lg-10 col-lg-offset-1">
<div class="center-flex">
<h1 class="space-title"><%=raw I18n.t ('.specialities.actions.show_speciality') %></h1>
</div>
<div class="col-lg-10">
  <div class="col-lg-12">
    <div class="col-lg-2 col-xs-5 text-right">
      <strong><%=raw I18n.t ('.specialities.attributes.name')%> </strong>
    </div>
    <div class="col-lg-10 col-xs-7 rdown">
      <div class="col-lg-10 ">
        <%= @speciality.name %>
      </div>
      
    </div>
  </div>
  <div class="col-lg-12">
    <div class="col-lg-2 col-xs-5 text-right">
      <strong><%=raw I18n.t ('.specialities.attributes.description')%></strong>
    </div>
    <div class="col-lg-10 col-xs-7 rdown">
      <div class="col-lg-10">
        <%= @speciality.description %>
      </div>
      
    </div>
  </div>
  <div class="col-lg-12">
    <div class="col-lg-2 col-xs-5 text-right">
      <strong><%=raw I18n.t ('.specialities.attributes.created_at')%></strong>
    </div>
    <div class="col-lg-10 col-xs-7 rdown">
      <div class="col-lg-10">
        <%= @speciality.created_at.strftime("%d-%m-%Y")%>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="col-lg-2 col-xs-5 text-right">
      <strong><%=raw I18n.t ('.specialities.attributes.updated_at')%></strong>
    </div>
    <div class="col-lg-10 col-xs-7 rdown">
      <div class="col-lg-10">
        <%= @speciality.updated_at.strftime("%d-%m-%Y")%>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="col-lg-2 col-xs-5 text-right">
      <strong><%=raw I18n.t ('.specialities.attributes.description')%></strong>
    </div>
    <div class="col-lg-10 col-xs-7 rdown">
      <div class="col-lg-10">
        <%= @speciality.status %>
      </div>
      
    </div>
  </div>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 center"> 
  <% if @permiso_modificar == true %>     
    <%= link_to I18n.t('.general.action.edit'), edit_speciality_path(@speciality),class: "hvr-skew-backward"  %>
  <% end -%>
    <%= link_to I18n.t('.general.action.cancel'), specialities_path, class: "hvr-skew-backward"  %>
  </div>
</section>
