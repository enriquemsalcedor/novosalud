<div class="col-lg-12 col-xs-12 form-group p-0">
  <div class="col-lg-12 input_100">
    <label class="label-form"><%= I18n.t ('.people.attributes.name') %></label>
    <%= f.text_field :first_name,  :input_html => {:maxlength => 50, :size => 60},  class: "input input-text", validate: true %>
  </div>
</div>
<div class="col-lg-12 col-xs-12 form-group p-0">
  <div class="col-lg-12 input_100">
    <label class="label-form"><%= I18n.t ('.people.attributes.lastname') %></label>
    <%= f.text_field :surname , minlength: '3', maxlength: '50', class: "input", validate: true%>
  </div>
</div>
<div class="col-lg-12 col-xs-12 form-group p-0">
  <label class="label-form col-lg-12"><%= I18n.t ('.people.attributes.type_identification') %></label>
  <div class="col-lg-2 col-xs-4 input_100 pt-01">
    <%= f.select :type_identification,People::TYPE_IDENTIFICATION_OPTIONS%>
    <span class="help-block"></span>
  </div> 
  <div class="col-lg-10 col-xs-8 input_100">
    <%= f.text_field :identification_document , minlength: '3', maxlength: '9', validate: true, class: "input"%>
    <% unless flash[:cedula_existe].nil? %>
      <span class="help-block1"><%= flash[:cedula_existe] %></span>
    <%end%>
  </div>
</div>
<div class="col-lg-12 col-xs-12 form-group p-0">
  <div class="col-lg-12 col-xs-12 input_100">
    <label class="label-form"><%= I18n.t ('.people.attributes.email') %></label>
    <%= f.text_field :email,  validate: true,  minlength: '10', maxlength: '60',class: "input",  validate: { presence: true }%>
    <% unless flash[:email_empleado].nil? %>
      <span class="help-block1"><%= flash[:email_empleado] %></span>
    <%end%>
    <span class="help-block"></span>
  </div>
</div>
<div class="col-lg-12 col-xs-12 form-group p-0">
  <div class="col-lg-5 col-xs-12">
    <label class="label-form"><%= I18n.t ('.people.attributes.date_birth') %></label>
    <div class="input-daterange calendar div-calendar">
      <%= f.text_field :date_birth, validate: true %>
    </div>
    <div class="icon-fecha"><span class="glyphicon glyphicon-calendar icon"></span></div>
  </div>
  <div class="col-lg-3 input_100 col-xs-12">
    <label class="label-form">Sexo</label>
    <%= f.select :sex,People::SEX_OPTIONS, validate:{presence: true},:prompt=>"Seleccione" %>
    <span class="help-block"></span>
  </div>
  <div class="col-lg-4 input_100 col-xs-12">
    <label class="label-form"><%= I18n.t ('.people.attributes.phone') %></label>
    <%= f.text_field :phone, validate:{presence: true, numericality: true},class: "input", maxlength: '15'%>
  </div>
</div>
<div class="col-lg-12 col-xs-12 form-group p-0">
  <div class="col-lg-12 input_100">
    <label class="label-form"><%= I18n.t ('.people.attributes.address') %></label>
     <%= f.text_area :address , minlength: '0', maxlength: '140', validate: true,class: "input_area"%>
  </div>
</div>


