<%= form_for(organization) do |f| %>

<div class="col-lg-12 form-group">

 <div class="col-lg-12 input_100">
 <%= f.label :nombre,class:"label-form" %>
  <%= f.text_field :name , maxlength: 50, size: 40 %>
  <span class="help-block"></span>
</div>
</div>
<div class="col-lg-12 form-group">
  <div class="col-lg-12 input_100">
   <%= f.label :rif, "RIF",class:"label-form" %>
   <%= f.text_field :rif , maxlength: 15, size: 40 %>
   <span class="help-block"></span>
 </div>
</div>
<div class="col-lg-12 form-group">
 <div class="col-lg-12 input_100">
   <%= f.label :email,class:"label-form" %>
   <%= f.text_field :email , maxlength: 50, size: 40 %>
   <span class="help-block"></span>
 </div>
</div>
<div class="col-lg-12 form-group">
 <div class="col-lg-12 input_100">
   <%= f.label :dirección,class:"label-form" %>
   <%= f.text_area :address , maxlength: 140, size: 40 %>
   <span class="help-block"></span>
 </div>
</div>
<div class="col-lg-12 form-group">
 <div class="col-lg-12 input_100">
   <%= f.label :Teléfono,class:"label-form" %>
   <%= f.text_field :phone , maxlength: 18, size: 40 %>
   <span class="help-block"></span>
 </div>
</div>
<div class="col-lg-12 form-group">
<div class="col-lg-2 col-lg-offset-7 col-sm-2 col-sm-offset-7 col-md-2 col-md-offset-7">
<%= link_to I18n.t('.general.action.cancel'), root_path,class: "hvr-skew-backward" %>
</div>
<% if @permiso_modificar == true || @permiso_crear == true %>
  <div class="col-lg-2">
    <%= f.submit I18n.t('.general.action.accept'),class: "hvr-skew-backward", data: {disable_with: "Guardando ..."}%>
  </div>
<% end -%>
</div>
<% end %>
