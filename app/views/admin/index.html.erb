<% unless alert.nil? %>
<div class="alert alert-danger notice">
   <button type="button" class="close" data-dismiss="alert">&times;</button>   
   <p id="notice margin_left_none"><%= alert %></p>
</div>
<%end%>
<div id="msg"></div>
<% unless notice.nil? %>
<div class="alert alert-success notice">
  <button type="button" class="close" data-dismiss="alert">&times;</button>   
  <p id="notice margin_left_none"><%= notice %></p>
</div>
<%end%>
<div class="container login-container">
  <div class="col-lg-5 col-sm-6 col-md-6 col-xs">
   <h3>Iniciar sesión</h3>
   <div class="login">
      <%= form_for(:user, :url => session_path(:user)) do |f| %>
      <div class="login-mail">
         <%= f.text_field :login, autofocus: true,class:"w-100", placeholder: "Usuario", id: "usernameText"%>
         <i class="glyphicon glyphicon-user top-icon"></i>
      </div>
      <div class="login-mail">
         <%= f.password_field :password, autocomplete: "off",class:"w-100", placeholder: true, placeholder:"Contraseña" %>
         <i class="glyphicon glyphicon-lock top-icon"></i>
      </div>
      <% if devise_mapping.rememberable? -%>
      <div class='cont-btn-super'>
         <div class='cont-'>
            <div class="cont-input">

            </div>
         </div> 
         <%= submit_tag I18n.t('.devise.new.login'), id:"btnIniciarSesion",class: "hvr-skew-backward"%>
      </div>
      <div class='cont-recuperacion mg-btn'>
         <div class='cont-input'>
            <%= link_to "Solicitar desbloqueo de cuenta", new_unlock_path(resource_name) %>              
         </div> 
         <div class="col-lg-12 pl-0">
         <div class='cont-label col-lg-6 pl-0'>
               <%= link_to "¿Olvidó su usuario?", forget_username_path%>
            </div>
         <div class='cont-recupas col-lg-6'>
            <%= link_to "¿Olvidó su contraseña?", new_password_path(resource_name) %>
         </div> 
         </div>
      </div>

      <br>
      <% end %>
      <% end %> 
   </div>
</div>
</div> 
