<% unless flash[:errors].nil? %>
<div class="alert alert-danger notice">
	<button type="button" class="close" data-dismiss="alert">&times;</button>   
	<p id="notice margin_left_none"><%= flash[:errors] %></p>
</div>
<%end%>
<div class="container login-container">
	<div class="col-lg-5 col-sm-6 col-md-6 col-xs-12 cont-sesion " >
		<h3>Solicitud de recuperaci√≥n de cuenta de usuario</h3>
		<%= form_for(@employee, url: check_send_username_path(@employee), html: { method: :post },valide: true) do |f| %>
			<div class="login-mail">
				<%= f.label I18n.t ('.people.attributes.email'), :disabled => true  %>
				<%= f.email_field :email,  minlength: '10', maxlength: '60',placeholder:"ejemplo@xxx.com",  validate: { presence: true }%>
				<i class="glyphicon glyphicon-envelope top-icon-pass"></i> 
			</div>
		<div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 pr-0">
			<div class="actions pull-left form-group">
				<%= link_to "Cancelar", admin_path ,class: "hvr-skew-backward"%>
			</div>                 
			<div class="cont- pull-right">
				<%= f.submit "Aceptar", data: {disable_with: "Enviando ..."}, class: "hvr-skew-backward" %>
			</div>
		</div>
	</div>	
	<% end %>
</div>
</div>