<div>
  <div class="col-lg-8 col-xs-10 container-movil">
    <div class="col-lg-12 col-xs-12">
      <div>
        <h2 class="space-title">Información de Cuentas Bancarias</h2>
      </div>
      <table class="table table-striped table-banco-movil">
        <tbody>
          <% @accounts.each do |account| %>
          <tr>
            <td>
                <% if account.bank.image_file_name.nil? %>
                  <i class="fa fa-cube"></i>
                <%else%>
                  <%=link_to( image_tag(account.bank.image.url(:logo)), account.bank.direction_web, :class=>"work",:target => "_blank", size:'50%x50%')  %>
                <%end%>
            </td>
            <td>
              <div class="col-lg-10 col-md-8 " >
                <div class="col-lg-10 col-md-8 ">
                  <strong>Banco: <%= link_to account.bank.name, account.bank.direction_web  ,:target => "_blank"%></strong>
                </div>
              </div>
              <div class="col-lg-10 col-md-8 ">
                <div class="col-lg-10 col-md-8 ">
                  <strong>Nº de cuenta: <%= account.formato_cuenta %></strong>
                </div>
              </div>
              <div class="col-lg-10 col-md-8 ">
                <div class="col-lg-10 col-md-8 ">
                  <strong>Tipo de cuenta: <%= account.account_type %></strong>
                </div>
              </div> 
              <div class="col-lg-10 col-md-8 ">
                <div class="col-lg-10 col-md-8 ">
                  <strong>RIF: <%= @organization.rif %></strong>
                </div>
              </div> 
              <div class="col-lg-10 col-md-8 ">
                <div class="col-lg-10 col-md-8 ">
                  <strong>Teléfono: <%= @organization.phone %></strong>
                </div>
              </div> 
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-lg-4 col-xs-12">
    
      <h2 class="space-title">Certifica tu transferencia </h2>
    
    <%= render 'payment/transferences/form'%>
  </div>
</div>
